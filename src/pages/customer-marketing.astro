---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects" sideBarActiveItemID="customer-marketing">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Customer Marketing</div>
  </div>

  <HorizontalCard
    title="Modives | Onboarding Experience"
    img="/modives-onboarding.png"
    desc="Collaborating with product and engineering to streamline the onboarding process in order to improve efficiency and customer experience"
    url="/modives-onboarding"
    target="_self"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Logixboard | LXB U Webinar Series"
    img="/logixboard-university.png"
    desc="Running a monthly webinar series for current customers to improve education and increase product engagement"
    url="/logixboard-university"
    target="_self"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Logixboard | LXB Help Center"
    img="/lxb-help-center.png"
    desc="Building educational articles for the launch of a dedicated customer resource center"
    url="/lxb-help-center"
    target="_self"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Logixboard | Customer Newsletter"
    img="/lxb-customer-newsletter.png"
    desc="Sending monthly newsletters to deliver information and resources to current customers"
    url="/lxb-customer-newsletter"
    target="_self"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="The Mom Project | The Study"
    img="/the-mom-project.png"
    desc="Developing and editing articles to launch an ungated resource center for moms who do paid work"
    url="/the-study"
    target="_self"
  />
</BaseLayout>
