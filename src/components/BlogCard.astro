---
const { title, img, alttext, desc, url } = Astro.props;
---

<div class="card w-72 bg-white hover:shadow-xl">
  <figure><img src={img} alt={alttext} /></figure>
  <div class="card-body">
    <h2 class="card-title">{title}</h2>
    <p>{desc}</p>
    <a href={url} target="_blank">
      <div class="card-actions justify-end">
        <button class="btn btn-primary">Read Now</button>
      </div>
    </a>
  </div>
</div>
