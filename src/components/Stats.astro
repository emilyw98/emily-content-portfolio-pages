---
const { stattitle1, stat1, desc1, stattitle2, stat2, desc2 } = Astro.props;
---

<div class="stats stats-vertical lg:stats-horizontal shadow bg-white">
  <div class="stat">
    <div class="stat-title">{stattitle1}</div>
    <div class="stat-value">{stat1}</div>
    <div class="stat-desc">{desc1}</div>
  </div>
  <div class="stat">
    <div class="stat-title">{stattitle2}</div>
    <div class="stat-value">{stat2}</div>
    <div class="stat-desc">{desc2}</div>
  </div>
</div>
